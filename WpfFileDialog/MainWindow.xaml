<Window
    x:Class="WpfFileDialog.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfFileDialog"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="btnFileOpen"
                    Click="btnFileOpen_Click"
                    Content="FileOpen" />
                <Button x:Name="btnFileClose" Content="btnFileClose" Click="btnFileClose_Click" />
            </StackPanel>
            <TextBlock x:Name="textBlockFileName" />
        </StackPanel>


    </Grid>
</Window>
